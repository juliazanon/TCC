<Window x:Class="TCC.HelicalLayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCC"
        mc:Ignorable="d"
        Title="HelicalLayer" Height="500" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="22" Margin="10" FontWeight="DemiBold">Criar nova camada</TextBlock>
        <StackPanel Grid.Row="1" Margin="3">
            <TextBlock FontSize="19" Margin="8">Espessura da camada:</TextBlock>
            <TextBox Margin="10"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="3">
            <TextBlock FontSize="19" Margin="8">Número de hélice:</TextBlock>
            <TextBox Margin="10"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="3" Margin="3">
            <TextBlock FontSize="19" Margin="8">Angulo de enrolamento da hélice:</TextBlock>
            <TextBox Margin="10"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="4" Margin="3">
            <TextBlock FontSize="19" Margin="8">Raio interno:</TextBlock>
            <TextBox Margin="10"></TextBox>
        </StackPanel>
    </Grid>
</Window>
