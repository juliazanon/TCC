<Window x:Class="TCC.HelicalLayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCC"
        mc:Ignorable="d"
        Title="Helical Layer" Height="700" SizeToContent="Width"
        MinHeight="400"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <ResourceDictionary>
            <!-- Define your color variables -->
            <Color x:Key="PrimaryColor">#C6F0B4</Color>
            <Color x:Key="SecundaryColor">#9CDB81</Color>
            <Color x:Key="TertiaryColor">#98D99A</Color>
            <Color x:Key="QuarternaryColor">#C2D998</Color>
            <Color x:Key="BackgroundColor">#FCFFF8</Color>
            <Color x:Key="FontColor">#24331E</Color>
            <Color x:Key="Font2Color">#2A4A20</Color>

            <!-- You can define SolidColorBrush resources using the color variables -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="SecundaryBrush" Color="{StaticResource SecundaryColor}"/>
            <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource TertiaryColor}"/>
            <SolidColorBrush x:Key="QuaternaryBrush" Color="{StaticResource QuarternaryColor}"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
            <SolidColorBrush x:Key="FontBrush" Color="{StaticResource FontColor}"/>
            <SolidColorBrush x:Key="Font2Brush" Color="{StaticResource Font2Color}"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="30" MaxHeight="35"/>
            <RowDefinition/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <TextBlock Name="TitleTextBlock" Grid.Row="0" FontSize="18" Margin="10,4" FontWeight="DemiBold" Foreground="{StaticResource Font2Brush}"></TextBlock>
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <StackPanel Margin="6,0,6,6" Background="{StaticResource PrimaryBrush}">
                    <TextBlock Margin="4" FontSize="14" FontWeight="DemiBold" Foreground="{StaticResource FontBrush}">Helix Name:</TextBlock>
                    <TextBox Margin="6,0,6,4" Name="NameTextBox" Text="New Layer" FontSize="13" Foreground="{StaticResource FontBrush}"></TextBox>
                    <TextBlock Height="0" Margin="4,0" Name="NameWarningTextBlock" Foreground="Red"></TextBlock>
                    <TextBlock Margin="4,6,4,0" FontWeight="DemiBold" FontSize="14" Foreground="{StaticResource FontBrush}">Geometric Parameters</TextBlock>
                    <StackPanel>
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Margin="8,2" TextAlignment="Right" Foreground="{StaticResource FontBrush}">Wires:</TextBlock>
                                <TextBox Grid.Column="1" Name="WiresTextBox" Margin="4,2" PreviewTextInput="IntegerTextBox_PreviewTextInput" Text="1" Foreground="{StaticResource FontBrush}"></TextBox>
                        </Grid>
                        <Grid Margin="6,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="85"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Margin="8,2" TextAlignment="Right" Foreground="{StaticResource FontBrush}">Radius:</TextBlock>
                                <TextBox Grid.Column="1" Name="RadiusTextBox" Margin="4,2" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="1.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                <TextBlock Grid.Column="2" Margin="8,2" TextAlignment="Right" Foreground="{StaticResource FontBrush}">Length:</TextBlock>
                                <TextBox Grid.Column="3" Name="LengthTextBox" Margin="4,2" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="1.0" Foreground="{StaticResource FontBrush}"></TextBox>
                        </Grid>
                        <Grid Margin="6,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="85"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Margin="8,2" TextAlignment="Right" Foreground="{StaticResource FontBrush}">Lay Angle:</TextBlock>
                                <TextBox Grid.Column="1" Name="LayAngleTextBox" Margin="4,2" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                <TextBlock Grid.Column="2" Margin="8,2" TextAlignment="Right" Foreground="{StaticResource FontBrush}">Initial Angle:</TextBlock>
                                <TextBox Grid.Column="3" Name="InitialAngleTextBox" Margin="4,2" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                        </Grid>
                        <Grid Margin="0,2,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Section</TextBlock>
                            <ComboBox Grid.Column="1" Name="SectionComboBox" HorizontalAlignment="Left" VerticalAlignment="Center" Width="140" Margin="2"
                                          DisplayMemberPath="Name" SelectedValuePath="ID" Foreground="{StaticResource FontBrush}">
                            </ComboBox>
                            <TextBlock Grid.Column="2" Margin="4,0,4,0" VerticalAlignment="Center" Foreground="Red" Name="SectionWarning">(!) Select a Valid Section</TextBlock>
                        </Grid>
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="6,0,6,6" Background="{StaticResource PrimaryBrush}">
                    <TextBlock Margin="4,6,4,2" FontWeight="DemiBold" FontSize="14" Foreground="{StaticResource FontBrush}">Simulation Parameters</TextBlock>
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <TextBlock VerticalAlignment="Center" Foreground="{StaticResource FontBrush}">Material:</TextBlock>
                        <ComboBox Name="MaterialComboBox" HorizontalAlignment="Left" VerticalAlignment="Center" Width="140" Margin="10,5,10,5"
                                          DisplayMemberPath="Name" SelectedValuePath="ID" Foreground="{StaticResource FontBrush}">
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="4,4,4,6">
                        <TextBlock Margin="0,2,4,2" Foreground="{StaticResource FontBrush}">Divisions:</TextBlock>
                        <TextBox Width="150" Name="DivisionsTextBox" PreviewTextInput="IntegerTextBox_PreviewTextInput" Text="1" Foreground="{StaticResource FontBrush}"></TextBox>
                    </StackPanel>
                    <TextBlock Margin="4,2,4,2" Foreground="{StaticResource FontBrush}">Body loads:</TextBlock>
                    <Grid Margin="10,4,10,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">X:</TextBlock>
                        <TextBox Grid.Column="1" Name="BodyLoadXTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                        <TextBlock Grid.Column="2" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Y:</TextBlock>
                        <TextBox Grid.Column="3" Name="BodyLoadYTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                        <TextBlock Grid.Column="4" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Z:</TextBlock>
                        <TextBox Grid.Column="5" Name="BodyLoadZTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                    </Grid>
                </StackPanel>
                <StackPanel Margin="6,0" Background="{StaticResource PrimaryBrush}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Margin="4,6,4,2" FontSize="16" FontWeight="DemiBold" Foreground="{StaticResource FontBrush}">Element: Line</TextBlock>
                            <CheckBox Margin="4" VerticalAlignment="Bottom" Content="Design Only" Name="DesignCheckBoxLine" IsChecked="False" Foreground="{StaticResource FontBrush}"/>
                        </StackPanel>
                        <TextBlock Margin="4,4,4,0" Foreground="{StaticResource FontBrush}">Distributed Loads:</TextBlock>
                        <Grid Margin="10,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Fx:</TextBlock>
                            <TextBox Grid.Column="1" Name="FxTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                            <TextBlock Grid.Column="2" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Fy:</TextBlock>
                            <TextBox Grid.Column="3" Name="FyTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                            <TextBlock Grid.Column="4" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Fz:</TextBlock>
                            <TextBox Grid.Column="5" Name="FzTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                        </Grid>
                        <Grid Margin="10,4,10,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Tx:</TextBlock>
                            <TextBox Grid.Column="1" Name="TxTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                            <TextBlock Grid.Column="2" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Ty:</TextBlock>
                            <TextBox Grid.Column="3" Name="TyTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                            <TextBlock Grid.Column="4" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Yz:</TextBlock>
                            <TextBox Grid.Column="5" Name="TzTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                        </Grid>
                        <TextBlock Margin="4,4,4,0" Foreground="{StaticResource FontBrush}">Status:</TextBlock>
                        <StackPanel Orientation="Horizontal" Margin="6,4">
                            <TextBlock VerticalAlignment="Center" Margin="8,2" Foreground="{StaticResource FontBrush}">Fx:</TextBlock>
                            <ComboBox  HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Name="FxComboBox">
                                <ComboBoxItem Content="Free" IsSelected="True"/>
                                <ComboBoxItem Content="Fixed"/>
                                <ComboBoxItem Content="Imposed"/>
                            </ComboBox>
                            <TextBlock VerticalAlignment="Center" Margin="8,2" Foreground="{StaticResource FontBrush}">Fy:</TextBlock>
                            <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Name="FyComboBox">
                                <ComboBoxItem Content="Free" IsSelected="True"/>
                                <ComboBoxItem Content="Fixed"/>
                                <ComboBoxItem Content="Imposed"/>
                            </ComboBox>
                            <TextBlock VerticalAlignment="Center" Margin="8,2" Foreground="{StaticResource FontBrush}">Fz:</TextBlock>
                            <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Name="FzComboBox">
                                <ComboBoxItem Content="Free" IsSelected="True"/>
                                <ComboBoxItem Content="Fixed"/>
                                <ComboBoxItem Content="Imposed"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="6,4,6,6">
                            <TextBlock VerticalAlignment="Center" Margin="8,2" Foreground="{StaticResource FontBrush}">Tx:</TextBlock>
                            <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Name="TxComboBox">
                                <ComboBoxItem Content="Free" IsSelected="True"/>
                                <ComboBoxItem Content="Fixed"/>
                                <ComboBoxItem Content="Imposed"/>
                            </ComboBox>
                            <TextBlock VerticalAlignment="Center" Margin="8,2" Foreground="{StaticResource FontBrush}">Ty:</TextBlock>
                            <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Name="TyComboBox">
                                <ComboBoxItem Content="Free" IsSelected="True"/>
                                <ComboBoxItem Content="Fixed"/>
                                <ComboBoxItem Content="Imposed"/>
                            </ComboBox>
                            <TextBlock VerticalAlignment="Center" Margin="8,2" Foreground="{StaticResource FontBrush}">Tz:</TextBlock>
                            <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Name="TzComboBox">
                                <ComboBoxItem Content="Free" IsSelected="True"/>
                                <ComboBoxItem Content="Fixed"/>
                                <ComboBoxItem Content="Imposed"/>
                            </ComboBox>
                        </StackPanel>
                        <TextBlock Margin="4,0" Foreground="{StaticResource FontBrush}">Imposed Displacements:</TextBlock>
                        <Grid Margin="10,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Fx:</TextBlock>
                            <TextBox Grid.Column="1" Name="FxDispTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                            <TextBlock Grid.Column="2" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Fy:</TextBlock>
                            <TextBox Grid.Column="3" Name="FyDispTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                            <TextBlock Grid.Column="4" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Fz:</TextBlock>
                            <TextBox Grid.Column="5" Name="FzDispTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                        </Grid>
                        <Grid Margin="10,4,10,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Tx:</TextBlock>
                            <TextBox Grid.Column="1" Name="TxDispTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                            <TextBlock Grid.Column="2" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Ty:</TextBlock>
                            <TextBox Grid.Column="3" Name="TyDispTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                            <TextBlock Grid.Column="4" Margin="8,2" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Tz:</TextBlock>
                            <TextBox Grid.Column="5" Name="TzDispTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                        </Grid>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Background="{StaticResource TertiaryBrush}" Margin="4">
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock FontWeight="DemiBold" Margin="4,8,4,0" Foreground="{StaticResource FontBrush}">Start</TextBlock>
                                    <CheckBox VerticalAlignment="Bottom" Content="Design Only" Name="DesignCheckBoxStart" IsChecked="False" Foreground="{StaticResource FontBrush}"/>
                                    <Button Click="StackPanel_ShowHide_OptionStart" Name="ButtonToggleStart" Margin="10,4,10,0" Height="16" Padding="4,0"
                                            BorderThickness="0" Background="{StaticResource BackgroundBrush}">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="3"/>
                                            </Style>
                                        </Button.Resources>
                                        Hide
                                    </Button>
                                </StackPanel>
                                <StackPanel Name="StackPanelStart">
                                    <StackPanel Orientation="Horizontal" Margin="4,4,2,4">
                                        <TextBlock VerticalAlignment="Center" Margin="4,0" Foreground="{StaticResource FontBrush}">Coordinate:</TextBlock>
                                        <ComboBox Name="CoordinateComboBoxStart" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100">
                                            <ComboBoxItem Content="Cartesian" IsSelected="True"/>
                                            <ComboBoxItem Content="Cylindrical"/>
                                        </ComboBox>
                                    </StackPanel>
                                    <Grid Margin="8,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Name="TextBlockCartesianCoord1Start" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">X:</TextBlock>
                                        <TextBlock Grid.Column="0" Name="TextBlockCilyndricalCoord1Start" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">R:</TextBlock>
                                        <TextBox Grid.Column="1" Name="XCoordTextBoxStart" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"/>
                                        <TextBlock Grid.Column="2"  Name="TextBlockCartesianCoord2Start" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Y:</TextBlock>
                                        <TextBlock Grid.Column="2" Name="TextBlockCilyndricalCoord2Start" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">θ:</TextBlock>
                                        <TextBox Grid.Column="3" Name="YCoordTextBoxStart" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                        <TextBlock Grid.Column="4" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Z:</TextBlock>
                                        <TextBox Grid.Column="5" Name="ZCoordTextBoxStart" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                    </Grid>
                                    <Grid Margin="8,4,8,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="35"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="35"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="35"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Margin="2,1" Foreground="{StaticResource FontBrush}">Rot X:</TextBlock>
                                        <TextBox Grid.Column="1" Name="RXCoordTextBoxStart" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                        <TextBlock Grid.Column="2" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Rot Y:</TextBlock>
                                        <TextBox Grid.Column="3" Name="RYCoordTextBoxStart" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                        <TextBlock Grid.Column="4" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Rot Z:</TextBlock>
                                        <TextBox Grid.Column="5" Name="RZCoordTextBoxStart" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                    </Grid>
                                    <TextBlock Margin="4,0" Foreground="{StaticResource FontBrush}">Loads:</TextBlock>
                                    <Grid Margin="8,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Fx:</TextBlock>
                                        <TextBox Grid.Column="1" Name="FxTextBoxStart" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                        <TextBlock Grid.Column="2" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Fy:</TextBlock>
                                        <TextBox Grid.Column="3" Name="FyTextBoxStart" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                        <TextBlock Grid.Column="4" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Fz:</TextBlock>
                                        <TextBox Grid.Column="5" Name="FzTextBoxStart" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                    </Grid>
                                    <Grid Margin="8,4,8,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Tx:</TextBlock>
                                        <TextBox Grid.Column="1" Name="TxTextBoxStart" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                        <TextBlock Grid.Column="2" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Ty:</TextBlock>
                                        <TextBox Grid.Column="3" Name="TyTextBoxStart" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                        <TextBlock Grid.Column="4" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Yz:</TextBlock>
                                        <TextBox Grid.Column="5" Name="TzTextBoxStart" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                    </Grid>
                                    <TextBlock Margin="4,0" Foreground="{StaticResource FontBrush}">Status:</TextBlock>
                                    <StackPanel Orientation="Horizontal" Margin="8,4">
                                        <TextBlock VerticalAlignment="Center" Margin="0,0,2,0" Foreground="{StaticResource FontBrush}">Fx:</TextBlock>
                                        <ComboBox  HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Name="FxComboBoxStart">
                                            <ComboBoxItem Content="Free" IsSelected="True"/>
                                            <ComboBoxItem Content="Fixed"/>
                                            <ComboBoxItem Content="Imposed"/>
                                        </ComboBox>
                                        <TextBlock VerticalAlignment="Center" Margin="8,0,2,0" Foreground="{StaticResource FontBrush}">Fy:</TextBlock>
                                        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Name="FyComboBoxStart">
                                            <ComboBoxItem Content="Free" IsSelected="True"/>
                                            <ComboBoxItem Content="Fixed"/>
                                            <ComboBoxItem Content="Imposed"/>
                                        </ComboBox>
                                        <TextBlock VerticalAlignment="Center" Margin="8,0,2,0" Foreground="{StaticResource FontBrush}">Fz:</TextBlock>
                                        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Name="FzComboBoxStart">
                                            <ComboBoxItem Content="Free" IsSelected="True"/>
                                            <ComboBoxItem Content="Fixed"/>
                                            <ComboBoxItem Content="Imposed"/>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="8,4">
                                        <TextBlock VerticalAlignment="Center" Margin="0,0,2,0" Foreground="{StaticResource FontBrush}">Tx:</TextBlock>
                                        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Name="TxComboBoxStart">
                                            <ComboBoxItem Content="Free" IsSelected="True"/>
                                            <ComboBoxItem Content="Fixed"/>
                                            <ComboBoxItem Content="Imposed"/>
                                        </ComboBox>
                                        <TextBlock VerticalAlignment="Center" Margin="8,0,2,0" Foreground="{StaticResource FontBrush}">Ty:</TextBlock>
                                        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Name="TyComboBoxStart">
                                            <ComboBoxItem Content="Free" IsSelected="True"/>
                                            <ComboBoxItem Content="Fixed"/>
                                            <ComboBoxItem Content="Imposed"/>
                                        </ComboBox>
                                        <TextBlock VerticalAlignment="Center" Margin="8,0,2,0" Foreground="{StaticResource FontBrush}">Tz:</TextBlock>
                                        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Name="TzComboBoxStart">
                                            <ComboBoxItem Content="Free" IsSelected="True"/>
                                            <ComboBoxItem Content="Fixed"/>
                                            <ComboBoxItem Content="Imposed"/>
                                        </ComboBox>
                                    </StackPanel>
                                    <TextBlock Margin="4,0" Foreground="{StaticResource FontBrush}">Imposed Displacements:</TextBlock>
                                    <Grid Margin="8,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Fx:</TextBlock>
                                        <TextBox Grid.Column="1" Name="FxDispTextBoxStart" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                        <TextBlock Grid.Column="2" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Fy:</TextBlock>
                                        <TextBox Grid.Column="3" Name="FyDispTextBoxStart" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                        <TextBlock Grid.Column="4" Margin="2,1" HorizontalAlignment="Right" Foreground="{StaticResource FontBrush}">Fz:</TextBlock>
                                        <TextBox Grid.Column="5" Name="FzDispTextBoxStart" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0" Foreground="{StaticResource FontBrush}"></TextBox>
                                    </Grid>
                                    <Grid Margin="8,4,8,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="20"/>
