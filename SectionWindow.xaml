<Window x:Class="TCC.SectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCC"
        mc:Ignorable="d"
        Title="SectionWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*" MinHeight="100"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Margin="4">Section Name:</TextBlock>
            <TextBox Margin="4"></TextBox>
            <ComboBox Grid.Row="0" x:Name="sectionComboBox" HorizontalAlignment="Left" VerticalAlignment="Center" Width="140" Margin="10,5,10,5">
                <ComboBoxItem Content="Section Rectangular" IsSelected="True"/>
                <ComboBoxItem Content="Section Cylindrical"/>
            </ComboBox>
        </StackPanel>
    </Grid>
</Window>
