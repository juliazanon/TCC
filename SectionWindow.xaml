<Window x:Class="TCC.SectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCC"
        mc:Ignorable="d"
        Title="SectionWindow" Height="270" Width="300"
        KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" Name="GeralMenuRow"/>
            <RowDefinition Height="*" MinHeight="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="#E6E6E6" Margin="4">
            <TextBlock Margin="4" FontWeight="DemiBold">Section Name:</TextBlock>
            <TextBox Margin="4" Name="NameTextBox" Text="New Section"></TextBox>
            <TextBlock Height="0" Margin="4,0,4,0" Name="NameWarningTextBlock" Foreground="Red"></TextBlock>
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBlock Margin="0,0,4,0">Type</TextBlock>
                <ComboBox Name="TypeComboBox" HorizontalAlignment="Left" VerticalAlignment="Center" Width="140" Margin="10,5,10,5">
                    <ComboBoxItem Content="rectangular" IsSelected="True"/>
                    <ComboBoxItem Content="tubular"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>
        <!-- Rectangular Section-->
        <StackPanel Name="Rectangular" Grid.Row="1" Margin="4" Background="#E6E6E6">
            <TextBlock Margin="4" FontWeight="DemiBold">Rectangular Section</TextBlock>
            <TextBlock Margin="4,0,0,0"> Geometric Parameters</TextBlock>
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBlock Margin="0,0,4,0">Width</TextBlock>
                <TextBox Width="100" Name="WidthTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="1.0"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBlock Margin="0,0,4,0">Height</TextBlock>
                <TextBox Width="100" Name="HeightTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="1.0"></TextBox>
            </StackPanel>
        </StackPanel>
        <!-- Cilyndrical Section-->
        <StackPanel Name="Cylindrical" Grid.Row="1" Margin="4" Background="#E6E6E6">
            <TextBlock Margin="4" FontWeight="DemiBold">Tubular Section</TextBlock>
            <TextBlock Margin="4,0,0,0"> Geometric Parameters</TextBlock>
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBlock Margin="0,0,4,0">Internal Radius</TextBlock>
                <TextBox Width="100" Name="InternalRadiusTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="0.0"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBlock Margin="0,0,4,0">External Radius</TextBlock>
                <TextBox Width="100" Name="ExternalRadiusTextBox" PreviewTextInput="NumericTextBox_PreviewTextInput" Text="1.0"></TextBox>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" HorizontalAlignment="Right" Margin="4">
            <Button Click="SubmitNewSection" Margin="4">Submit</Button>
        </StackPanel>
    </Grid>
</Window>
