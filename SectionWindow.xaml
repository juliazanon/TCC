<Window x:Class="TCC.SectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCC"
        mc:Ignorable="d"
        Title="SectionWindow" Height="210" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*" MinHeight="100"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="#E6E6E6" Margin="4">
            <TextBlock Margin="4" FontWeight="DemiBold">Section Name:</TextBlock>
            <TextBox Margin="4"></TextBox>
            <ComboBox Name="sectionComboBox" HorizontalAlignment="Left" VerticalAlignment="Center" Width="140" Margin="10,5,10,5">
                <ComboBoxItem Content="Section Rectangular" IsSelected="True"/>
                <ComboBoxItem Content="Section Cylindrical"/>
            </ComboBox>
        </StackPanel>
        <!-- Rectangular Section-->
        <StackPanel Name="RectangularSection" Grid.Row="1" Margin="4" Background="#E6E6E6">
            <TextBlock Margin="4" FontWeight="DemiBold">Section Rectangular</TextBlock>
            <TextBlock Margin="4,0,0,0"> Geometric Parameter</TextBlock>
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBlock Margin="0,0,4,0">Width</TextBlock>
                <TextBox Width="100"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBlock Margin="0,0,4,0">Height</TextBlock>
                <TextBox Width="100"></TextBox>
            </StackPanel>
        </StackPanel>
        <!-- Cilyndrical Section-->
        <StackPanel Name="CilyndricalSection" Grid.Row="1" Margin="4" Background="#E6E6E6">
            <TextBlock Margin="4" FontWeight="DemiBold">Section Cilyndrical</TextBlock>
            <TextBlock Margin="4,0,0,0"> Geometric Parameter</TextBlock>
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBlock Margin="0,0,4,0">InternalRadius</TextBlock>
                <TextBox Width="100"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBlock Margin="0,0,4,0">ExternalRadius</TextBlock>
                <TextBox Width="100"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
